<div class="post-lists row">
{% for key,row in rows %}
    {% set img = file_url(row['content']['#row']._entity.field_image.entity.fileuri)%}
    {%if(key==0)%}
    <div class="post-item item-first col-sm-8 col-xs-12">
    <div class="post-bg" style="background: url('{{img}}'); background-size: 775px 425px;">
        {%else%}
            <div class="post-item col-sm-4 col-xs-12">
            <div class="post-bg  imgResize-1-1" style="background-image: url('{{img}}')">
            {%endif%}
            {{row.content}}
        </div>
    </div>
{% endfor %} 
</div>