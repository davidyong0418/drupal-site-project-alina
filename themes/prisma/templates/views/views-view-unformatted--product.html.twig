
{% for key,row in rows %}
    {% if(key%2==0)%}
        {% set div_1 = 'col-md-6 section-image'%}
        {% set div_2 = 'col-md-6'%}
        {% set left =''%}
    {%else%}
        {% set div_1 = 'col-md-6 col-md-push-6 section-image'%}
        {% set div_2 = 'col-md-6 col-md-pull-6'%}
        {% set left ='section-left'%}
    {% endif %}
    {% set img = file_url(row['content']['#row']._entity.field_image.entity.fileuri)%}
    <div class="row">
        <div class="{{div_1}}">
            <div class="row">
                <img src="{{img}}">
            </div>
        </div>
        <div class="{{div_2}}">
            <div class="row">
                <div class="section-content {{left}}">
                    {{row.content}}
                </div>
            </div>
        </div>
    </div>
{%endfor%}

